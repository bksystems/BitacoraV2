<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/listview_custom_simulador_fecha"
        android:textSize="11dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/mango_primario"
        android:layout_alignBottom="@+id/listview_custom_simulador_oficina"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:text="Fecha Visita"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listview_custom_simulador_nomina_colaborador"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listview_custom_simulador_id"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_custom_simulador_oficina"
        android:text="Nombre de la oficina"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/magenta_primario"
        android:paddingTop="1dp"
        android:paddingLeft="1dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_custom_simulador_imagen"
        android:layout_toEndOf="@+id/listview_custom_simulador_imagen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_custom_simulador_nomina_colaborador"
        android:text="Nomina colaborador"
        android:textSize="11dp"
        android:textColor="@color/magenta_secundario"
        android:paddingTop="2dp"
        android:paddingLeft="1dp"
        android:layout_below="@+id/listview_custom_simulador_oficina"
        android:layout_toRightOf="@+id/listview_custom_simulador_imagen"
        android:layout_toEndOf="@+id/listview_custom_simulador_imagen" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:id="@+id/listview_custom_simulador_imagen"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>