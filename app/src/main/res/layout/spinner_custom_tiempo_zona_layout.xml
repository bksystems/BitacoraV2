<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="2dp" android:paddingRight="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/spinner_custom_tiempo_zona_tiempo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/spinner_custom_tiempo_zona_image"
        android:layout_toEndOf="@+id/spinner_custom_tiempo_zona_image"
        android:textColor="@color/magenta_primario"
        android:textStyle="bold"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textSize="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/spinner_custom_tiempo_zona_descripcion"
        android:layout_below="@+id/spinner_custom_tiempo_zona_tiempo"
        android:layout_toRightOf="@+id/spinner_custom_tiempo_zona_image"
        android:layout_toEndOf="@+id/spinner_custom_tiempo_zona_image"
        android:textSize="9dp"
        android:textColor="@color/magenta_secundario"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_custom_tiempo_zona_image"
        android:layout_alignBottom="@id/spinner_custom_tiempo_zona_descripcion"
        android:src="@drawable/ic_menu_camera"
        android:layout_alignParentTop="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>