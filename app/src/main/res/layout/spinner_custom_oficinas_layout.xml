<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="2dp" android:paddingRight="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre oficina"
        android:id="@+id/spinner_custom_oficina_nombreOficina"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/spinner_custom_oficina_image"
        android:layout_toEndOf="@+id/spinner_custom_oficina_image"
        android:textColor="@color/magenta_primario"
        android:textStyle="bold"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textSize="11dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_custom_oficina_image"
        android:src="@drawable/ic_menu_camera"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_alignBottom="@+id/spinner_custom_oficina_estructuraOficina"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Estructura de oficina de servicios"
        android:id="@+id/spinner_custom_oficina_estructuraOficina"
        android:layout_below="@+id/spinner_custom_oficina_nombreOficina"
        android:layout_toRightOf="@+id/spinner_custom_oficina_image"
        android:layout_toEndOf="@+id/spinner_custom_oficina_image"
        android:textSize="9dp"
        android:textColor="@color/magenta_secundario"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="centro de costos de oficina"
        android:id="@+id/spinner_custom_oficina_ccerpOficina"
        android:textSize="9dp"
        android:textColor="@color/magenta_secundario"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_alignBaseline="@+id/spinner_custom_oficina_nombreOficina"
        android:layout_alignBottom="@+id/spinner_custom_oficina_nombreOficina"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>