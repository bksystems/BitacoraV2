<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/listview_general_ci_utiliza_lista"
        android:text="Utiliza lista negocio"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/listview_general_ci_ruta"
        android:paddingTop="2dp"
        android:paddingRight="1dp"
        android:layout_toRightOf="@+id/listview_general_ci_ruta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/listview_general_ci_fecha"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/listview_general_ci_ruta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="2dp"
        android:paddingRight="1dp"
        android:text="Fecha visita ci"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listview_general_ci_ruta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listview_general_ci_id"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_general_ci_ruta"
        android:text="Ruta seleccionada"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="2dp"
        android:paddingLeft="1dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_general_ci_imagen"
        android:layout_toEndOf="@+id/listview_general_ci_imagen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_general_ci_nomina_colaborador"
        android:text="Nomina colaborador"
        android:textSize="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="2dp"
        android:paddingLeft="1dp"
        android:layout_below="@+id/listview_general_ci_ruta"
        android:layout_toRightOf="@+id/listview_general_ci_imagen"
        android:layout_toEndOf="@+id/listview_general_ci_imagen" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_general_ci_imagen"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_alignBottom="@+id/listview_general_ci_nomina_colaborador"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>